{
  "private": true,
  "name": "@example/root",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kzok/learn-npm-workspaces.git"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run -w @example/next dev",
    "test": "jest",
    "fmt:prettier": "prettier --write .",
